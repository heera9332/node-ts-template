{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "target": "es6",
    "module": "nodenext",
    "rootDir": "src",
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./src/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["mode_modules"]
}
